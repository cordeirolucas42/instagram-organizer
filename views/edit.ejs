<% include partials/header %>

<div class="ui text container">
	<div class="ui raised segment">
		<h2 class="ui header">
			Edit Photo Source or Info
		</h2>
		<form class="ui form" action="/photos/<%=photo._id%>?_method=PUT" method="POST">
			<div class="field">
				<label>Source</label>
				<input value="<%=photo.source%>" type="text" name="photo[source]">
			</div>
			<div class="field">
				<label>Description</label>
				<textarea rows="5" name="photo[description]"><%=photo.description%></textarea>
			</div>	
			<div class="field">
				<button type="submit" class="ui primary button">
					Confirm
				</button>
				<a href="/photos" class="ui button">
					Back
				</a>
			</div>	
		</form>
	</div>
</div>

<% include partials/footer %>